@model IEnumerable<GamingE_Commerce.Models.ApplicationUser>

@{ ViewData["Title"] = "ListUsers"; }

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a class="btn btn-success btn-sm" style="border-radius: 6px;" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-primary btn-sm" style="border-radius: 6px;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" style="border-radius: 6px;" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>}
    </tbody>
</table>
