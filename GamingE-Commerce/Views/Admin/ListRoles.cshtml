@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="border-radius: 6px; width:auto" asp-action="CreateRole"
       asp-controller="Admin">Add new role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Admin" asp-action="EditRole"
                   asp-route-id="@role.Id" class="btn btn-success" style="border-radius: 6px;">
                    Edit
                </a>
                <a asp-controller="Admin" asp-action="DeleteRole"
                   asp-route-id="@role.Id" class="btn btn-danger" style="border-radius: 6px;">
                    Delete
                </a>
                <a asp-controller="Admin" asp-action="EditUsersInRole"
                   asp-route-roleId="@role.Id" class="btn btn-primary" style="border-radius: 6px;"> 
                    View Users In Role
                </a>
            </div>            
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto; border-radius: 6px;"
               asp-controller="Admin" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}