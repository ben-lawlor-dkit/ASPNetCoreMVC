@using Microsoft.AspNetCore.Identity
@using GamingE_Commerce.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav navbar-brand">
    @if (SignInManager.IsSignedIn(User))

    {

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("RemoveAllFromShoppingCart", "ShoppingCart", new { area = "" })">
                <br /> <button type="submit" class="btn-sm btn-primary">Logout</button>
            </form>
        </li>
        @await Component.InvokeAsync("ShoppingCartSummary")
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }

    <li class="nav-item">
</ul>