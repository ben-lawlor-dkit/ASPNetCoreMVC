@page
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="text-center mt-5 ">
    <br><br><br>

    <form id="account" method="post" style="max-width:300px; margin:auto;">
        <div asp-validation-summary="All"></div>
        <img class="mt-4 mb-4" src="~/images/logo.png" height="130" width="150" alt="logo">
        <h1 class="h3 mb-3 font-weight-normal ">Login to Account</h1>


        <input asp-for="Input.Email" class="form-control" placeholder="Email..." />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <br />


        <input asp-for="Input.Password" class="form-control" placeholder="Password..." />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        <br />
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-lg btn-info btn-block" value="Login"> Login </button>
        </div>
        <br />

    </form>


    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" sstyle="max-width:300px;">
        <div>
            <p>
                @if (Model.ExternalLogins != null)
                {
                    @foreach (var provider in Model.ExternalLogins)
                    {

                        <button type="submit" class="btn  btn-lg btn-outline-dark" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <img width="20" style="margin-bottom:3px; margin-right:8px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />Login with Google Account
                        </button>
                    }

                }
            </p>
        </div>

        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
    </form>


</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
